
@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Contenedores</h1>
                    <ul>
                    </ul>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Contenedores</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tabal de información</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Imagen</th>
                                    <th>Tipo</th>
                                    <th>Comentario(s)</th>
                                    <th>Latitud</th>
                                    <th>Longitud</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var info in ViewBag.InfoContenedores)
                                {
                                <tr>
                                    <td>@info.Imagenbase64</td>
                                    <td>@info.TipoTacho</td>
                                    <td>@info.Comentario</td>
                                    <td>@info.Latitud</td>
                                    <td>@info.Longitud</td>
                                    <td>
                                        <button type="button" class="btn btn-block btn-success">Editar</button>
                                    </td>

                                </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Imagen</th>
                                    <th>Tipo</th>
                                    <th>Comentario(s)</th>
                                    <th>Latitud</th>
                                    <th>Longitud</th>
                                    <th>Acción</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<!-- DataTables -->
<script src="~/Content/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

<!-- page script -->
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
    });
  });
</script>

<!-- /.content-wrapper -->